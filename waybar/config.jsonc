{
  "layer": "top", // "top" or "bottom"
  "position": "top", // bar position
  "height": 30, // bar height in px
  "modules-left": [
    "sway/workspaces",
    "sway/window",
    "sway/mode",
    "sway/scratchpad",
    "sway/language"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "custom/spotify",
    "memory",
    "cpu",
    "bluetooth",
    "network",
    "pulseaudio",
    "backlight",
