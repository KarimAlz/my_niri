    "tooltip-format-on": "Not connected",
    "tooltip-format-off": "Bluetooth off",
    "tooltip-format-connected-battery": "{device_alias} - {device_battery_percentage}% charge",
    "on-click": "bluetoothctl show | grep 'Powered: yes' && bluetoothctl power off || bluetoothctl power on",
    "on-click-right": "blueman-manager"
  },
  "custom/power": {
    "format": "ó°¥",
    "tooltip": false,
    /*"on-click": "shutdown now",
    "on-double-click": "reboot"*/
    "menu": "on-click",
    "menu-file": "/home/karim/.config/waybar/menu/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown now",
      "reboot": "reboot"
    }
  },
  "custom/separator": {
    "format": "|",
    "tooltip": false
  },
  "custom/spotify": {
    "exec": "playerctl metadata --format '{{ artist }} - {{ title }}' 2>/dev/null || echo 'No music playing'",
    "interval": 5,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "tooltip": false
  },
